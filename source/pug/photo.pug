extends templates/default_layout

block vars
  - var current_page = "Наши работы";
  - var page_id_for_js = "js-photo";
  - var page_title = "Наши работы";
  - var page_script = "./js/script.min.js";
  - var page_decription = "Барбершоп Бородинский - фотографии наших работ. Санкт-Петербург, ул. Большая Конюшенная 19/8";
  - var page_keywords = "Барбершоп Бородинский, барбершоп, Бородинский, мужская стрижка, стрижка, укладка, стрижка бороды, укладка бороды, стильная борода, стильная стрижка, постричься в питере, постричься в питере парню, Санкт-Петербург";

block header
  header.page-header(id=page_id_for_js)
    a.page-header__logo.page-header__logo(href='index.html')
      picture
        source(
          media='(min-width: 1200px)',
          srcset='./img/content_svg/logotype-desktop.svg'
        )
        source(
          media='(min-width: 768px)',
          srcset='./img/content_svg/logotype-tablet.svg'
        )
        img.page-header__logo-image(
          src='./img/content_svg/logotype-mobile.svg',
          width='226',
          height='30',
          alt='Логотип барбершопа Бородинский'
        )

    nav.main-nav.main-nav--closed.main-nav--no-js
      button.main-nav__toggle(type='button')
        span.visually-hidden Открыть меню
      .main-nav__wrapper
        ul.main-nav__list.main-nav__list--site.site-list
          li.site-list__item
            a.site-list__link(href='index.html') Главная

          li.site-list__item.site-list__item--current-page
            a.site-list__link Наши работы

          li.site-list__item
            a.site-list__link(href='form.html') Записаться

        ul.main-nav__list.main-nav__list--user.user-list
          li.user-list__item
            a.user-list__login(href='#')
              svg#Layer_1.user-list__icon(
                version='1.1',
                width='16',
                height='16',
                xmlns='http://www.w3.org/2000/svg',
                x='0',
                y='0',
                viewbox='0 0 16 16',
                xml:space='preserve'
              )
                style.
                  .user-list__icon-style {
                  fill: #826550;
                  }
                path.user-list__icon-style(d='M0 7h7V4l4 4-4 4V9H0z')
                path.user-list__icon-style(d='M7 0v2h7v12H7v2h9V0z')
              span.user-list__text Войти

block content
  main.inner-page
    span.decorative-triangle.inner-page__decorative-triangle--concave(
      role='presentation'
    )
    .inner-page__wrapper
      .inner-page__title_and_button-container
        h1.inner-page__title Наши работы
        a.inner-page__link-to-index.button(href='index.html') На главную

      section.inner-page__gallery.gallery
        .gallery__wrapper
          h2.visually-hidden Фотогалерея наших работ
          ul.gallery__list
            li.gallery__item.gallery__item--work-of-the-month
              picture
                source(
                  media='(min-width: 1200px)',
                  srcset='img/content_img/photo-1-desktop.webp 1x, img/content_img/photo-1-desktop@2x.webp 2x',
                  type='image/webp'
                )
                source(
                  media='(min-width: 768px)',
                  srcset='img/content_img/photo-1-tablet.webp 1x, img/content_img/photo-1-tablet@2x.webp 2x',
                  type='image/webp'
                )
                source(
                  srcset='img/content_img/photo-1-mobile.webp 1x, img/content_img/photo-1-mobile@2x.webp 2x',
                  type='image/webp'
                )
                source(
                  media='(min-width: 1200px)',
                  srcset='img/content_img/photo-1-desktop.jpg 1x, img/content_img/photo-1-desktop@2x.jpg 2x'
                )
                source(
                  media='(min-width: 768px)',
                  srcset='img/content_img/photo-1-tablet.jpg 1x, img/content_img/photo-1-tablet@2x.jpg 2x'
                )
                img.gallery__image(
                  src='img/content_img/photo-1-mobile.jpg',
                  srcset='img/content_img/photo-1-mobile@2x.jpg 2x',
                  alt='Фотография Лжепётра Мчиславского'
                )
              .gallery__text-content-container
                blockquote.gallery__blockquote
                  cite.gallery__client-name
                    | Лжепётр Мчиславский
