extends templates/default_layout

block vars
  - var current_page = "Записаться";
  - var page_id_for_js = "js-form";
  - var page_title = "Записаться";
  - var page_script = "./js/script.min.js";
  - var page_decription = "Барбершоп Бородинский - записаться на стрижку. Санкт-Петербург, ул. Большая Конюшенная 19/8";
  - var page_keywords = "Барбершоп Бородинский, барбершоп, Бородинский, мужская стрижка, стрижка, укладка, стрижка бороды, укладка бороды, стильная борода, стильная стрижка, постричься в питере, постричься в питере парню, Санкт-Петербург";

block header
  header.page-header(id=page_id_for_js)
    a.page-header__logo.page-header__logo(href='index.html')
      picture
        source(
          media='(min-width: 1200px)',
          srcset='./img/content_svg/logotype-desktop.svg'
        )
        source(
          media='(min-width: 768px)',
          srcset='./img/content_svg/logotype-tablet.svg'
        )
        img.page-header__logo-image(
          src='./img/content_svg/logotype-mobile.svg',
          width='226',
          height='30',
          alt='Логотип барбершопа Бородинский'
        )
    nav.main-nav.main-nav--closed.main-nav--no-js
      button.main-nav__toggle(type='button')
        span.visually-hidden Открыть меню

      .main-nav__wrapper
        ul.main-nav__list.main-nav__list--site.site-list
          li.site-list__item
            a.site-list__link(href='index.html') Главная

          li.site-list__item
            a.site-list__link(href='photo.html') Наши работы

          li.site-list__item.site-list__item--current-page
            a.site-list__link Записаться

        ul.main-nav__list.main-nav__list--user.user-list
          li.user-list__item
            a.user-list__login(href='#')
              svg#Layer_1.user-list__icon(
                version='1.1',
                width='16',
                height='16',
                xmlns='http://www.w3.org/2000/svg',
                x='0',
                y='0',
                viewbox='0 0 16 16',
                xml:space='preserve'
              )
                style.
                  .user-list__icon-style {
                  fill: #826550;
                  }
                path.user-list__icon-style(d='M0 7h7V4l4 4-4 4V9H0z')
                path.user-list__icon-style(d='M7 0v2h7v12H7v2h9V0z')
              span.user-list__text Войти

block content
  main.inner-page
    span.decorative-triangle.inner-page__decorative-triangle--concave(
      role='presentation'
    )

    .inner-page__wrapper
      .inner-page__title_and_button-container.inner-page__title_and_button-container--form-page
        h1.inner-page__title Запись на стрижку
        a.inner-page__link-to-index.button(href='index.html') На главную

      section.appointment
        .appointment__wrapper
          //- в форме не прописан action, добавить его
          form.appointment__form(method='POST')
            fieldset.appointment__fieldset.appointment__fieldset-name
              legend.visually-hidden
                | Фамилия, Имя, Отчество
              ul.appointment__fieldset-list--name
                li.appointment__fieldset-item
                  label.visually-hidden(for='client-surname') Фамилия
                  input#client-surname.appointment__text-input(
                    type='text',
                    name='client-surname',
                    placeholder='Фамилия',
                    required,
                    autocomplete='on',
                    autofocus
                  )

                li.appointment__fieldset-item
                  label.visually-hidden(for='client-firstname') Имя
                  input#client-firstname.appointment__text-input(
                    type='text',
                    name='client-firstname',
                    placeholder='Имя',
                    required,
                    autocomplete='on'
                  )

                li.appointment__fieldset-item
                  label.visually-hidden(for='client-middlename') Отчество
                  input#client-middlename.appointment__text-input(
                    type='text',
                    name='client-middlename',
                    placeholder='Отчество',
                    required,
                    autocomplete='on'
                  )

            fieldset.appointment__fieldset.appointment__fieldset-contacts
              legend.visually-hidden
                | Телефон и электронная почта
              ul.appointment__fieldset-list--contacts
                li.appointment__fieldset-item.appointment__fieldset-item--contacts
                  label.visually-hidden(for='client-phone') Контактный телефон
                  input#client-phone.appointment__text-input(
                    type='tel',
                    name='client-phone',
                    placeholder='Контактный телефон',
                    required,
                    autocomplete='on'
                  )

                li.appointment__fieldset-item.appointment__fieldset-item--contacts
                  label.visually-hidden(for='client-email') Контактный e-mail
                  input#client-email.appointment__text-input(
                    type='email',
                    name='client-email',
                    placeholder='Контактный e-mail',
                    required,
                    autocomplete='on'
                  )

            fieldset.appointment__fieldset.appointment__fieldset-additional-info
              legend.visually-hidden Дополнительная информация для мастера
              label.visually-hidden(for='client-additional-info')
                | Дополнительная информация для мастера
              textarea#client-additional-info.appointment__text-input.appointment__textarea(
                name='client-additional-info',
                placeholder='Доп. информация для мастера',
                cols='21',
                rows='3'
              )

            fieldset.appointment__fieldset.appointment__beard-select
              legend.appointment__beard-title
                | Выберите модель бороды:
              ul.appointment__beard-list
                li.appointment__beard-item
                  input#beard-admiral.appointment__beard-input.visually-hidden-input-button(
                    type='radio',
                    name='beard-select',
                    required
                  )
                  label.appointment__beard-label(for='beard-admiral') Адмирал
                    //- yes, there is no need for svg sprite here and simple <img> should be used instead. However, it's a training project, so I decided to use an svg sprite here in order to learn how to create and use it manually (I deleted the manual code after switched to automatic sprite creation/insertion) and with Pug & Gulp
                    +svgSpriteIcon('icon-admiral', 52, 49, 'appointment__icon-beard appointment__icon-beard--admiral', 'изображение адмиральской бороды')

                li.appointment__beard-item
                  input#beard-lumberjack.appointment__beard-input.visually-hidden-input-button(
                    type='radio',
                    name='beard-select'
                  )
                  label.appointment__beard-label(for='beard-lumberjack') Лесоруб
                    +svgSpriteIcon('icon-lumberjack', 58, 68, 'appointment__icon-beard appointment__icon-beard--lumberjack', 'изображение бороды лесоруба')

                li.appointment__beard-item
                  input#beard-polarman.appointment__beard-input.visually-hidden-input-button(
                    type='radio',
                    name='beard-select'
                  )
                  label.appointment__beard-label(for='beard-polarman') Полярник
                    +svgSpriteIcon('icon-polarman', 63, 78, 'appointment__icon-beard appointment__icon-beard--polarman', 'изображение бороды полярника')

                li.appointment__beard-item
                  input#beard-boyar.appointment__beard-input.visually-hidden-input-button(
                    type='radio',
                    name='beard-select'
                  )
                  label.appointment__beard-label(for='beard-boyar') Боярин
                    +svgSpriteIcon('icon-boyar', 57, 97, 'appointment__icon-beard appointment__icon-beard--boyar', 'изображение бороды боярина')

                li.appointment__beard-item
                  input#beard-sage.appointment__beard-input.visually-hidden-input-button(
                    type='radio',
                    name='beard-select'
                  )
                  label.appointment__beard-label(for='beard-sage') Мудрец
                    +svgSpriteIcon('icon-sage', 45, 104, 'appointment__icon-beard appointment__icon-beard--sage', 'изображение бороды мудреца')

            fieldset.appointment__fieldset.appointment__additional-services
              Legend.appointment__additional-services-title
                | Дополнительные услуги:
              ul.appointment__additional-services-list
                li.appointment__additional-services-item
                  input#beard-paint.appointment__checkbox-input.visually-hidden-input-button(
                    type='checkbox',
                    name='paint-beard'
                  )
                  label.appointment__checkbox-label(for='beard-paint')
                    | Подкрасить бороду

                li.appointment__additional-services-item
                  input#beard-comb.appointment__checkbox-input.visually-hidden-input-button(
                    type='checkbox',
                    name='beard-comb'
                  )
                  label.appointment__checkbox-label(for='beard-comb')
                    | Причесать бороду

                li.appointment__additional-services-item
                  input#mustache.appointment__checkbox-input.visually-hidden-input-button(
                    type='checkbox',
                    name='mustache'
                  )
                  label.appointment__checkbox-label(for='mustache')
                    | Накрутить усы

                li.appointment__additional-services-item
                  input#temple-trim.appointment__checkbox-input.visually-hidden-input-button(
                    type='checkbox',
                    name='temple-trim'
                  )
                  label.appointment__checkbox-label(for='temple-trim')
                    | Подровнять виски

                li.appointment__additional-services-item
                  input#grey-hair.appointment__checkbox-input.visually-hidden-input-button(
                    type='checkbox',
                    name='grey-hair'
                  )
                  label.appointment__checkbox-label(for='grey-hair')
                    | Убрать седину

                li.appointment__additional-services-item
                  input#bald-polish.appointment__checkbox-input.visually-hidden-input-button(
                    type='checkbox',
                    name='bald-polish'
                  )
                  label.appointment__checkbox-label(for='bald-polish')
                    | Отполировать лысину

            button.button.appointment__submit-button(type='submit')
              | Отправить заявку
    span.decorative-triangle.appointment__decorative-triangle(
      role='presentation'
    )
